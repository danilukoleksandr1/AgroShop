@model AgroShop.Web.Models.Product

<h2>Додати товар</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label>Назва</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-2">
        <label>Ціна</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Кількість</label>
        <input asp-for="Stock" type="number" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Посилання на фото</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Категорія</label>
        <select asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "Name"))" class="form-control">
            <option value="">-- оберіть категорію --</option>
        </select>
        @if (ViewBag.CategoryError != null)
        {
            <span class="text-danger">@ViewBag.CategoryError</span>
        }
    </div>

    <div class="mb-2">
        <label>Нова категорія (якщо нема)</label>
        <input type="text" name="NewCategoryName" class="form-control" />
    </div>

    <button class="btn btn-success mt-3">Зберегти</button>
</form>
