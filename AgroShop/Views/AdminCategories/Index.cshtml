@model IEnumerable<AgroShop.Web.Models.Category>

<h2>Категорії</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Додати категорію</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr class="@(c.IsActive ? "" : "table-secondary")">
                <td>@c.Name</td>
                <td>
                    <a asp-action="ToggleActive" asp-route-id="@c.CategoryID" class="btn btn-warning btn-sm">
                        @(c.IsActive ? "Сховати" : "Показати")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
