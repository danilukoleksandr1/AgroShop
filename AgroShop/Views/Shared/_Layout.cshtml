<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroShop</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgroShop.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand" asp-controller="Products" asp-action="Index">
                    AgroShop
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="mainNavbar">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Products"
                               asp-action="Index">
                                Каталог
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Cart"
                               asp-action="Index">
                                Кошик
                            </a>
                        </li>
                    </ul>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Account"
                                   asp-action="Profile">
                                    Кабінет
                                </a>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account"
                                      asp-action="Logout"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-link nav-link text-dark"
                                            style="text-decoration:none">
                                        Вийти
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Вхід
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Account"
                                   asp-action="Register">
                                    Реєстрація
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="Admin"
                                   asp-action="Index">
                                    Адмін
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AgroShop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
